{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "CommonJS",
    "sourceMap": true,
    "target": "es2021",
    "rootDir": "./src",
    "outDir": "./build",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
}